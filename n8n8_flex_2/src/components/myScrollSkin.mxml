<?xml version="1.0" encoding="utf-8"?>

<!--

滚动条,皮肤来自skin包

-->

<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009" minWidth="35" minHeight="15" 
    alpha.disabled="0.5" alpha.inactive="0.5">

    <fx:Metadata>
    <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.HScrollBar")]
    ]]>
    </fx:Metadata> 

    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
        <s:State name="inactive" />
    </s:states>

    <s:Button id="track" left="16" right="15" width="54" height="22"
              focusEnabled="false" tabEnabled="false"
              skinClass="skin.trackSkin" />


    <s:Button id="thumb" height="22" 
              focusEnabled="false" visible.inactive="false" tabEnabled="false"
              skinClass="skin.thumbSkin" />


    <s:Button id="decrementButton" left="0" height="22" toolTip="向左滑动"
              focusEnabled="false" enabled.inactive="false" tabEnabled="false"
              skinClass="skin.downSkin" />
    

    <s:Button id="incrementButton" right="0" height="22" toolTip="向右滑动"
              focusEnabled="false" enabled.inactive="false" tabEnabled="false"
              skinClass="skin.upSkin" />

</s:SparkSkin>
